---
import "../styles/global.css";
import "maplibre-gl/dist/maplibre-gl.css";

const { title } = Astro.props;
const { PUBLIC_PLAUSIBLE_URL, PUBLIC_PLAUSIBLE_DOMAIN } = import.meta.env;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="manifest" href="/manifest.json" />
    {
      PUBLIC_PLAUSIBLE_URL && PUBLIC_PLAUSIBLE_DOMAIN && (
        <script
          defer
          data-domain={PUBLIC_PLAUSIBLE_DOMAIN}
          src={`${PUBLIC_PLAUSIBLE_URL}/js/script.js`}
        />
      )
    }
    <title>
      {title ? `${title} â€¢ WoBahn` : "WoBahn"}
    </title>
  </head>
  <body class="flex flex-col min-h-screen">
    <slot />
  </body>
</html>
