---
import "leaflet/dist/leaflet.css";
import Navbar from "../components/Navbar.astro";

const { title } = Astro.props;
const { PUBLIC_PLAUSIBLE_URL, PUBLIC_PLAUSIBLE_DOMAIN } = import.meta.env;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    {
      PUBLIC_PLAUSIBLE_URL && PUBLIC_PLAUSIBLE_DOMAIN && (
        <script
          defer
          data-domain={PUBLIC_PLAUSIBLE_DOMAIN}
          src={`${PUBLIC_PLAUSIBLE_URL}/js/script.js`}
        />
      )
    }
    <title>
      {title ? `${title} â€¢ WoBahn` : "WoBahn"}
    </title>
  </head>
  <body class="grid grid-rows-[auto,1fr,auto] min-h-screen">
    <Navbar />
    <slot />
  </body>
</html>
