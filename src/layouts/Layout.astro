---
import "../styles/global.css";
import "leaflet/dist/leaflet.css";
import Navbar from "../components/Navbar.astro";

const { title } = Astro.props;
const { PUBLIC_PLAUSIBLE_URL, PUBLIC_PLAUSIBLE_DOMAIN } = import.meta.env;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    {
      PUBLIC_PLAUSIBLE_URL && PUBLIC_PLAUSIBLE_DOMAIN && (
        <script
          defer
          data-domain={PUBLIC_PLAUSIBLE_DOMAIN}
          src={`${PUBLIC_PLAUSIBLE_URL}/js/script.js`}
        />
      )
    }
    <script>
      (function() {
        const theme = localStorage.getItem('wobahn-theme') || 'system';
        if (theme === 'dark' || (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
    <title>
      {title ? `${title} â€¢ WoBahn` : "WoBahn"}
    </title>
  </head>
  <body class="flex flex-col w-screen min-h-screen bg-white dark:bg-zinc-950 text-black dark:text-white">
    <Navbar />
    <slot />
  </body>
</html>
