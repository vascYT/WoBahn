---
import { ArrowLeft } from "lucide-react";
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div
    class="grow p-3 md:px-5 prose lg:prose-lg prose-h1:font-bold prose-h1:text-3xl prose-a:text-blue-600 prose-a:underline-offset-4 prose-p:text-justify prose-img:rounded-xl"
  >
    <a class="flex items-center gap-1 mb-4 no-underline" href="/">
      <ArrowLeft className="size-4" /> Back
    </a>
    <slot />
  </div>
</Layout>
